# Production Environment Variables for Server
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=production

# Supabase Configuration
# Get these from: https://app.supabase.com/project/[your-project]/settings/api
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# JWT Secret
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_jwt_secret

# WhatsApp Session Path (for serverless, use /tmp)
WHATSAPP_SESSION_PATH=/tmp/sessions

# Evolution API Configuration (optional)
EVOLUTION_API_URL=your_evolution_api_url
EVOLUTION_API_KEY=your_evolution_api_key
EVOLUTION_WEBHOOK_SECRET=your_webhook_secret

# Frontend URL (for CORS)
FRONTEND_URL=https://your-vercel-app-url.vercel.app
